<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#252a30">

    <com.muqi.app.user.widget.RoundProgressBar
        android:id="@+id/loading"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:visibility="gone"
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="@color/white"
        android_custom:roundWidth="4dip"
        android_custom:textRPBColor="@color/title_bg_color"
        android_custom:textRPBSize="13sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/check_original_button"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dip"

        android:gravity="center"
        android:text="查看原图"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:visibility="gone" />

</FrameLayout>