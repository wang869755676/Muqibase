<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#B0B0B0" />

            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp" />

            <stroke
                android:width="@dimen/bottom_dialog_line_height"
                android:color="#818181" />
        </shape>
    </item>
    <item android:bottom="@dimen/bottom_dialog_line_height">
        <shape>
            <solid android:color="#B0B0B0" />

            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp" />
        </shape>
    </item>

</layer-list>