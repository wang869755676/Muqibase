<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle">
            <solid android:color="#d8d8d8" />
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="1px"
        android:top="1px">
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <solid android:color="#ececec" />
        </shape>
    </item>
</layer-list>  